section.hero
  .container-fluid
    .hero__title
      .container
        h1 Краски
    .swiper.hero__slider
      .swiper-wrapper
        each slide in heroSlides
          .swiper-slide.hero__slide
            picture
              source(srcset=`./assets/img/${slide.img}@1x.webp 1x, ./assets/img/${slide.img}@2x.webp 2x` type="image/webp")
              img(src=`./assets/img/${slide.img}@1x.jpg" srcset="./assets/img/${slide.img}@2x.jpg 2x` alt= slide.title width="1920" height="560")

            .hero__slide-content
              h2!= slide.title
              p!= slide.text

      .swiper-button-next.hero__slider-button-next
        svg(width="20" height="40")
          use(xlink:href="./assets/sprite.svg#icon-arrow")
      .swiper-button-prev.hero__slider-button-prev
        svg(width="20" height="40")
          use(xlink:href="./assets/sprite.svg#icon-arrow")
      .swiper-pagination.hero__slider-pagination

